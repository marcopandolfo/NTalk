<% include ../header %>
<header class="row-fluid text-center">
  <h2>Ntalk - Agenda de contatos</h2>
</header>
<section class="row-fluid text-center">
  <form
    action="/contato/<%- contato._id %>?_method=PUT"
    method="post"
    class="well form-inline"
  >
    <input type="hidden" name="_csrf" value="<%- _csrf %>" />
    <h4>Editar contato</h4>
    <label>Nome:</label>
    <input
      type="text"
      name="contato[nome]"
      value="<%- contato.nome %>"
      class="input-medium"
    />
    <label>E-mail:</label>
    <input
      type="text"
      name="contato[email]"
      value="<%- contato.email %>"
      class="input-medium"
    />
    <button type="submit" class="btn btn-primary">Atualizar</button>
  </form>
</section>
<% include ../exit %> <% include ../footer %>
